// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
}

// ユーザーモデル（NextAuth.jsと連携）
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  videos        Video[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

// NextAuth.js用アカウントモデル
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

// NextAuth.js用セッションモデル
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// NextAuth.js用検証トークンモデル
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// 動画モデル
model Video {
  id            String       @id @default(cuid())
  videoId       String       // YouTube動画ID
  title         String
  description   String?
  thumbnailUrl  String?
  duration      Int?         // 秒
  publishedAt   DateTime?
  privacyStatus String?
  userId        String
  user          User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  transcript    Transcript?
  chapters      Chapter[]
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@unique([userId, videoId])
}

// トランスクリプトモデル
model Transcript {
  id        String   @id @default(cuid())
  videoId   String   @unique
  video     Video    @relation(fields: [videoId], references: [id], onDelete: Cascade)
  segments  String   // JSON形式で保存 (TranscriptSegment[])
  fullText  String?  // 全文テキスト（検索用）
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// チャプター（目次）モデル
model Chapter {
  id        String   @id @default(cuid())
  videoId   String
  video     Video    @relation(fields: [videoId], references: [id], onDelete: Cascade)
  title     String
  startTime Int      // 開始時間（秒）
  summary   String?  // チャプターの要約
  order     Int      // 表示順序
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([videoId])
}
